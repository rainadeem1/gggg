@model IEnumerable<SNS.Models.Cours>

@{
    ViewBag.Title = "All";
}
<div class="row">
    <div class="col-lg-8 col-lg-offset-2 ">
        <div class="panel panel-success">
            <div class="panel-heading ui-draggable-handle">
                <h3 class="panel-title">Course</h3>
            </div>
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @if (ViewBag.type == "Admin")
                                {
                                    <a href="@Url.Action("new","course", new {id=item.Id })" class="btn btn-default btn-rounded btn-sm"><span class="fa fa-pencil"></span></a>
                                    <a href="@Url.Action("Delete","course", new {id=item.Id })" class="btn btn-danger btn-rounded btn-sm btn-del"><span class="fa fa-times"></span></a>
                                }
                               
                            </td>
                        </tr>
                    }

                </table>
            </div>
            
            <div class="panel-footer">
                <a href="@Url.Action("new","course")" class="btn btn-primary pull-right">New</a>

            </div>

        </div>


    </div>
</div>


@section script{
    <script src="~/Content/js/datatables/js/jquery.dataTables.js"></script>

    <script>
        $(function () {

        //    $("#nav-allPro,#nav-pro").addClass("active");
            //delete message
            $(".btn-del").click(function () {
                var c = confirm("Do you want to Delete ?");
                if (c == true) { }
                else { return false; }
            });

            $(".table").dataTable();
        });
    </script>
}





