@model SNS.Models.TeacherCours

@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>
<div class="row">
    <div class="col-lg-6 col-lg-offset-3 ">
        <div class="panel panel-success">
            <div class="panel-heading ui-draggable-handle">
                <h3 class="panel-title">Cours</h3>
            </div>
            @using (Html.BeginForm("SaveCourses", "teacher", FormMethod.Post))
            {
                <div class="panel-body">
                    <div class="form-horizontal">
                        <h4>Cours Details</h4>
                        <hr />
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            @Html.Label("Cours", htmlAttributes: new { @class = "text-left col-md-2 text-left" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(m => m.CourseID, ViewBag.courses as List<SelectListItem>, new { @class = "form-control chosen", required = "required" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.FacultyID, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FacultyID, new { htmlAttributes = new { @class = "form-control", Readonly = "readonly", Value = ViewBag.FaculityID } })
                                @Html.ValidationMessageFor(model => model.FacultyID, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                </div>
                <div class="panel-footer">
                    <button type="reset" class="btn btn-default">Reset</button>
                    <button type="submit" class="btn btn-primary pull-right">Save</button>
                </div>
            }
        </div>


    </div>
</div>
