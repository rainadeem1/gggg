@model SNS.Models.Designation

@{
    ViewBag.Title = "New";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-3 ">
        <div class="panel panel-success">
            <div class="panel-heading ui-draggable-handle">
                <h3 class="panel-title">Designation</h3>
            </div>
            @using (Html.BeginForm("save", "Designation", FormMethod.Post))
            {
    <div class="panel-body">
        <div class="form-horizontal">
            <h4>Designation Details</h4>
            <hr />
            @Html.HiddenFor(m=>m.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required= "required" } })

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Description,  new { @class = "form-control" ,rows="5", required = "required" })

                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <button type="reset" class="btn btn-default">Reset</button>
        <button type="submit" class="btn btn-primary pull-right">Save</button>
    </div>
}
        </div>


    </div>
</div>