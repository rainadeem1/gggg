@model SNS.Models.User

<div class="form-horizontal">
    <h4>  @ViewBag.UserTitle</h4>
    <hr />
  
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label text-left col-md-4" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", required= "required" } })
        
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-left col-md-4" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "required" } )
     
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Confirm Password", htmlAttributes: new { @class = "control-label text-left col-md-6" })
        <div class="col-md-10">
            @Html.Password("Cpass",null,  new { @class = "form-control", required = "required" } )

        </div>
    </div>

  
</div>
