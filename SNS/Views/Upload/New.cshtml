@model SNS.Models.Upload

@{
    ViewBag.Title = "New";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-3 ">
        <div class="panel panel-success">
            <div class="panel-heading ui-draggable-handle ">
                <h3 class="panel-title">Leactures Data</h3>
            </div>
            @using (Html.BeginForm("save", "upload", FormMethod.Post, new { id = "frm-upload", enctype = "multipart/form-data" }))
            {
                <div class="panel-body">
                    <div class="form-horizontal">
                        <h4>Upload Details</h4>
                        <hr />
                      
                        <div class="form-group">
                            @Html.Label("Title", htmlAttributes: new { @class = "text-left col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FileName, new { htmlAttributes = new { @class = "form-control" , required="required" } })
                          
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Cours", htmlAttributes: new { @class = "text-left col-md-2 text-left" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(m=>m.CourseID, ViewBag.courses as List<SelectListItem>, new { @class = "form-control chosen", required = "required" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Description", htmlAttributes: new { @class = "text-left col-md-2 text-left" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control chosen", required = "required",rows="5" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("File", htmlAttributes: new { @class = "text-left col-md-2" })
                            <div class="col-md-10">
                              <input type="file" name="File" id="File"  />
                         
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button type="reset" class="btn btn-default">Reset</button>
                    <button type="submit" class="btn btn-primary pull-right">Save</button>
                </div>
            }
        </div>


    </div>
</div>

